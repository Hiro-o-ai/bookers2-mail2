<!DOCTYPE html>
<html>
  <head>
    <title>Bookers</title>
    <%= csrf_meta_tag %>
    <%= csp_meta_tag %>
    
    <%= stylesheet_link_tag 'http://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css' %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
    <div class="header" id="header">
      <nav class="navbar navbar-inverse">
        <div class="container-fluid">
          <div class="navbar-header">
          <h3>Bookers</h3>
          </div>
          <ul class="nav navbar-nav navbar-right">
            <% if user_signed_in? %>
              <li><%= link_to user_path(current_user.id), class: "my-bt" do%><i class="glyphicon glyphicon-home"></i> Home<% end %></li>
              <li><%= link_to users_path, class: "my-bt" do%><i class="glyphicon glyphicon-user"></i> users<% end %></li>
              <li><%= link_to books_path, class: "my-bt" do%><i class="glyphicon glyphicon-book"></i> books<% end %></li>
             <li><%= link_to destroy_user_session_path, method: :delete, class: "my-bt" do%><i class="glyphicon glyphicon-log-out"></i> logout<% end %></li>
            <% else %>
             <li><%= link_to root_path, class: "my-bt" do%><i class="glyphicon glyphicon-home"></i> Home<% end %></li>
              <li><%= link_to about_home_path, class: "my-bt" do%><i class="glyphicon glyphicon-link"></i> about<% end %></li>
              <li><%= link_to new_user_registration_path, class: "my-bt" do%><i class="glyphicon glyphicon-edit"></i> sign up<% end %></li>
              <li><%= link_to new_user_session_path, class: "my-bt" do%><i class="glyphicon glyphicon-log-in"></i> login<% end %></li>
            <% end %>
          </ul>
        </div>
      </nav>
    </div>
    <div class="search">
      <div class="container">
        <div class="row">
          <div class="col-xs-3"></div>
          <div class="col-xs-6">
            <% if user_signed_in? %>
              <%= form_tag(search_path, :method => "get" ) do %>
                <%= select_tag(:option, options_for_select([["user", "1"],["book","2"]])) %>
                <%= select_tag(:choice, options_for_select([["完全一致", "1"],["前方一致","2"],["後方一致","3"],["部分一致","4"]])) %>
                <%= text_field_tag :search %>
                <%= submit_tag "Search", :name => nil %>
              <% end %>
            <% else %>
            <% end %>
          </div>
          <div class="col-xs-3"></div>
        </div>
      </div>
    </div>
    </header>
    <%= yield %>

    <footer>
        <p class="text-right">CopyRight Infratop.inc do you know?</p>
      </div>
    </footer>

  </body>
</html>
